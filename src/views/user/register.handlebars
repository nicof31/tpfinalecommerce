<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Usuarios</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: black;
            color: white;
            font-family: 'Arial', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        form {
            margin-top: 20px; 
            background-color: rgba(255, 255, 255, 0.1);
            padding: 10px; 
            border-radius: 10px;
            width: 600px;
            text-align: center;
        }

        label,
        input,
        button,
        select {
            margin-top: 5px; 
            display: block;
        }

        button,
        select {
            padding: 8px; 
            width: 100%;
            text-align: center;
        }

        button {
            background-color: #337ab7;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: white;
            color: black;
        }

        input,
        select {
            width: 100%;
            padding: 6px; 
            font-size: 14px; 
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 4px;
            margin-top: 10px;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-warning {
            background-color: #ffc107;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>

<body>
    <div>
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
<form action="/api/session/register" method="post" onsubmit="return validarFormulario()">
    <h1>Registrar Usuarios</h1>
    <label for="first_name">Nombre del usuario</label>
    <input type="text" name="first_name" id="first_name" placeholder="Introduzca su nombre" required />

    <label for="last_name">Apellido</label>
    <input type="text" name="last_name" id="last_name" placeholder="Introduzca su apellido" required />

    <label for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="Introduzca su correo electrónico" required />

    <label for="age">Edad</label>
    <input type="number" name="age" id="age" placeholder="Introduzca su edad" min="0" required />

    <label for="password">Contraseña</label>
    <input type="password" name="password" id="password" placeholder="Introduzca su contraseña" required />

    <label for="profile_type">Perfil</label>
    <select name="role" id="profile_type" required>
        <option value="" disabled selected>Seleccione un perfil</option>
        <option value="PUBLIC">PUBLIC</option>
        <option value="USER">USER</option>
        <option value="ADMIN">ADMIN</option>
        <option value="PREMIUM">PREMIUM</option>
    </select>

    <button class="btn-success" type="submit">Crear Usuario</button>
    <button class="btn-warning" onclick="volverLogin()">Volver a Login</button>

</form>

<script>
    function validarFormulario() {
        var firstName = document.getElementById("first_name").value;
        var lastName = document.getElementById("last_name").value;
        var email = document.getElementById("email").value;

        if (firstName.length < 4 || lastName.length < 4) {
            alert("El nombre y el apellido deben tener al menos 4 letras.");
            return false;
        }

        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            alert("Por favor, introduzca un correo electrónico válido.");
            return false;
        }
        return true;
    }

    function volverLogin() {
        window.location.href = '/login';
    }
</script>


</body>

</html>
